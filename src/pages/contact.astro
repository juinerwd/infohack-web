---
import Footer from "../sections/Footer.astro";
import Header from "../sections/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

import { initContactForm } from "../scripts/contact";

const pageData = {
    title: "Contacto - Infohack",
    description:
        "Ponte en contacto con el equipo de Infohack. Queremos escuchar tus dudas, sugerencias o colaboraciones en ciberseguridad.",
};

const currentPath = Astro.url.pathname;
---

<BaseLayout title={pageData.title} description={pageData.description}>
    <!-- Navegación -->
    <Header currentPath={currentPath} />

    <section class="max-w-3xl mx-auto px-6 py-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">Contáctanos</h1>
        <p class="text-lg text-gray-700 mb-8 leading-relaxed">
            ¿Tienes alguna duda, sugerencia o quieres colaborar con nosotros?
            Completa el formulario y pronto añadiremos la opción de enviar tus
            mensajes directamente al equipo de Infohack.
        </p>

        <!-- Formulario de contacto -->
        <form
            id="contact-form"
            class="space-y-6 bg-white p-6 rounded-lg shadow-md border border-gray-200"
        >
            <div>
                <label
                    for="name"
                    class="block text-sm font-medium text-gray-700 mb-2"
                    >Nombre</label
                >
                <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:outline-none"
                />
            </div>

            <div>
                <label
                    for="email"
                    class="block text-sm font-medium text-gray-700 mb-2"
                    >Correo electrónico</label
                >
                <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:outline-none"
                />
            </div>

            <div>
                <label
                    for="message"
                    class="block text-sm font-medium text-gray-700 mb-2"
                    >Mensaje</label
                >
                <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:outline-none"
                ></textarea>
            </div>

            <button
                type="submit"
                class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors shadow-md"
            >
                Enviar mensaje
            </button>
        </form>

        <!-- Mensaje de confirmación -->
        <p id="form-status" class="mt-6 text-center text-sm text-gray-600"></p>
    </section>

    <!-- Footer -->
    <Footer />

    <!-- Importa tu script en cliente -->
    <script is:client>
        import { initContactForm } from "../scripts/contact";
        initContactForm();
    </script>
</BaseLayout>
