---
export interface Props {
  title: string;
  items: string[];
  variant?: 'success' | 'warning' | 'info';
}

const { title, items, variant = 'success' } = Astro.props;

const variantStyles = {
  success: 'bg-green-50 border-green-200 text-green-800',
  warning: 'bg-amber-50 border-amber-200 text-amber-800',
  info: 'bg-blue-50 border-blue-200 text-blue-800'
};

const iconStyles = {
  success: 'text-green-600',
  warning: 'text-amber-600',
  info: 'text-blue-600'
};
---

<div class={`border-2 rounded-xl p-6 mb-6 ${variantStyles[variant]}`}>
  <h3 class="text-xl font-semibold mb-4 flex items-center">
    <span class={`text-2xl mr-3 ${iconStyles[variant]}`}>
      {variant === 'success' ? '✅' : variant === 'warning' ? '⚠️' : 'ℹ️'}
    </span>
    {title}
  </h3>
  
  <div class="space-y-3">
    {items.map(item => (
      <div class="flex items-start">
        <span class={`text-lg mr-3 mt-0.5 ${iconStyles[variant]}`}>
          {variant === 'success' ? '✓' : variant === 'warning' ? '△' : '•'}
        </span>
        <span class="text-base leading-relaxed">{item}</span>
      </div>
    ))}
  </div>
</div>
